<UserControl x:Class="SimulationApp.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Label>Settings</Label>
        <CheckBox Margin="0 20" IsChecked="{Binding Source={StaticResource Settings}, Path=ShowDebugPane}">Show Debug Pane</CheckBox>
    </StackPanel>
</UserControl>
